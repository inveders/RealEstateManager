<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/create_update_fragment_two"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_margin">

    <TextView
        android:id="@+id/activity_create_update_real_estate_agent_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_property_real_estate_agent_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextviewStyle"
        />

    <Spinner
        android:id="@+id/create_update_spinner_real_estate_agent_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        app:layout_constraintLeft_toRightOf="@id/activity_create_update_property_date_entry_title"
        app:layout_constraintTop_toTopOf="@id/activity_create_update_real_estate_agent_title"
        style="@style/EditTextStylewithoutText"
        />

    <TextView
        android:id="@+id/activity_create_update_property_date_entry_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_property_date_of_entry_on_market_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/default_large_margin"
        app:layout_constraintTop_toBottomOf="@id/activity_create_update_real_estate_agent_title"
        style="@style/TextviewStyle"
        />


    <TextView
        android:id="@+id/activity_create_update_property_date_entry_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_property_date_of_entry_on_market_text"
        android:layout_marginStart="@dimen/default_margin"
        app:layout_constraintLeft_toRightOf="@id/activity_create_update_property_date_entry_title"
        app:layout_constraintTop_toTopOf="@id/activity_create_update_property_date_entry_title"
        style="@style/EditTextStylewithoutText"
        />


    <EditText
        android:id="@+id/activity_create_update_property_full_description_text"
        android:layout_width="match_parent"
        android:layout_marginEnd="@dimen/default_margin"
        app:layout_constrainedWidth="true"
        android:layout_height="175sp"
        android:maxLength="325"
        android:hint="@string/limited_to_300_letters"
        android:gravity="top"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintLeft_toLeftOf="@id/activity_create_update_property_date_entry_title"
        app:layout_constraintTop_toBottomOf="@id/activity_create_update_property_date_entry_title"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:background="@drawable/edit_text_design_rectangle"
        style="@style/EditTextStyleText"/>

    <TextView
        android:id="@+id/activity_create_update_property_photos_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_update_add_photos"
        android:layout_marginTop="@dimen/default_large_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_create_update_property_full_description_text"
        style="@style/TextviewStyle"
        />

    <ImageView
        android:id="@+id/activity_create_update_added_photo_one"
        android:layout_width="240sp"
        android:layout_height="240sp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginTop="@dimen/default_large_margin"
        app:layout_constraintTop_toBottomOf="@id/activity_create_update_property_photos_title"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:contentDescription="@string/description_image"
        android:src="@mipmap/ic_logo_appli_round"/>



    <TextView
        android:id="@+id/activity_create_update_property_added_photo_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description_image"
        app:layout_constraintLeft_toLeftOf="@id/activity_create_update_added_photo_one"
        app:layout_constraintTop_toBottomOf="@id/activity_create_update_added_photo_one"
        />

    <ImageView
        android:id="@+id/activity_create_update_added_photo_two"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginStart="10sp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="@id/activity_create_update_added_photo_one"
        app:layout_constraintLeft_toRightOf="@id/activity_create_update_added_photo_one"
        android:contentDescription="@string/description_image"
        android:src="@mipmap/ic_logo_appli_round"/>

    <ImageView
        android:id="@+id/activity_create_update_added_photo_three"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@id/activity_create_update_added_photo_two"
        app:layout_constraintLeft_toRightOf="@id/activity_create_update_added_photo_one"
        android:contentDescription="@string/description_image"
        android:src="@mipmap/ic_logo_appli_round"/>

    <ImageView
        android:id="@+id/activity_create_update_added_photo_four"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@id/activity_create_update_added_photo_three"
        app:layout_constraintLeft_toRightOf="@id/activity_create_update_added_photo_one"
        android:contentDescription="@string/description_image"
        android:src="@mipmap/ic_logo_appli_round"
         />

    <ImageView
    android:id="@+id/activity_create_update_added_photo_five"
    android:layout_width="50sp"
    android:layout_height="50sp"
    android:layout_marginStart="10sp"
    android:layout_marginTop="10sp"
    android:adjustViewBounds="true"
    android:scaleType="fitCenter"
    app:layout_constraintTop_toBottomOf="@id/activity_create_update_added_photo_four"
    app:layout_constraintLeft_toRightOf="@id/activity_create_update_added_photo_one"
    android:contentDescription="@string/description_image"
    android:src="@mipmap/ic_logo_appli_round"/>

    <Button
        android:id="@+id/activity_create_update_add_photo_button"

        android:text="@string/create_update_add_photo_button"
        app:layout_constraintBottom_toTopOf="@id/activity_create_update_added_photo_one"
        app:layout_constraintRight_toLeftOf="@id/activity_create_update_added_photo_one"
        app:layout_constraintLeft_toRightOf="@id/activity_create_update_added_photo_one"
        android:layout_marginTop="@dimen/default_large_margin"
        android:layout_marginBottom="10dp"
        style="@style/ButtonIntermediateStyle"/>

    <Button
        android:id="@+id/create_update_confirm_button"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_create_update_property_added_photo_description"
        android:gravity="center"
        android:text="@string/create_update_confirm_button"
        style="@style/ButtonStyle"/>


</androidx.constraintlayout.widget.ConstraintLayout>