<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/create_update_fragment_two"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/fragment_two_cconstraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/default_margin">

        <TextView
            android:id="@+id/activity_create_update_real_estate_agent_title"
            style="@style/TextviewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_property_real_estate_agent_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/activity_create_update_spinner_real_estate_agent_text"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_margin"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/activity_create_update_real_estate_agent_title"
            style="@style/EditTextStylewithoutText"

            />

        <TextView
            android:id="@+id/activity_create_update_property_date_entry_title"
            style="@style/TextviewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_extra_large_margin"
            android:text="@string/detail_property_date_of_entry_on_market_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_create_update_real_estate_agent_title" />


        <TextView
            android:id="@+id/activity_create_update_property_date_entry_text"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:text="@string/detail_property_date_of_entry_on_market_text"
            app:layout_constraintRight_toRightOf="@id/activity_create_update_spinner_real_estate_agent_text"

            app:layout_constraintTop_toTopOf="@id/activity_create_update_property_date_entry_title"
            style="@style/EditTextStyleText"
            />


        <TextView
            android:id="@+id/activity_create_update_property_full_description_title"
            style="@style/TextviewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_extra_large_margin"
            android:text="@string/detail_property_description_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_create_update_property_date_entry_title" />


        <EditText
            android:id="@+id/activity_create_update_property_full_description_text"
            style="@style/EditTextStyleText"
            android:layout_width="match_parent"
            android:layout_height="175sp"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            android:gravity="top"
            android:hint="@string/limited_to_300_letters"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:maxLength="325"
            app:layout_constrainedWidth="true"
            app:layout_constraintLeft_toLeftOf="@id/activity_create_update_property_date_entry_title"
            app:layout_constraintRight_toRightOf="@id/activity_create_update_spinner_real_estate_agent_text"
            app:layout_constraintTop_toBottomOf="@id/activity_create_update_property_full_description_title" />

        <TextView
            android:id="@+id/activity_create_update_property_photos_title"
            style="@style/TextviewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_extra_large_margin"
            android:text="@string/create_update_add_photos"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_create_update_property_full_description_text" />

        <ImageView
            android:id="@+id/activity_create_update_added_photo_one"
            android:layout_width="240sp"
            android:layout_height="240sp"
            android:layout_marginTop="@dimen/default_margin"
            android:adjustViewBounds="true"
            android:contentDescription="@string/description_image"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_logo_appli_realestate_round"
            app:layout_constraintLeft_toLeftOf="@id/activity_create_update_property_photos_title"

            app:layout_constraintTop_toBottomOf="@id/activity_create_update_property_photos_title" />

        <ImageView
            android:id="@+id/activity_create_update_added_photo_two"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginStart="10sp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/description_image"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_logo_appli_realestate_round"
            app:layout_constraintLeft_toRightOf="@id/activity_create_update_added_photo_one"
            app:layout_constraintTop_toTopOf="@id/activity_create_update_added_photo_one" />

        <ImageView
            android:id="@+id/activity_create_update_added_photo_three"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/description_image"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_logo_appli_realestate_round"
            app:layout_constraintLeft_toRightOf="@id/activity_create_update_added_photo_one"
            app:layout_constraintTop_toBottomOf="@id/activity_create_update_added_photo_two" />

        <ImageView
            android:id="@+id/activity_create_update_added_photo_four"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/description_image"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_logo_appli_realestate_round"
            app:layout_constraintLeft_toRightOf="@id/activity_create_update_added_photo_one"
            app:layout_constraintTop_toBottomOf="@id/activity_create_update_added_photo_three" />

        <ImageView
            android:id="@+id/activity_create_update_added_photo_five"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/description_image"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_logo_appli_realestate_round"
            app:layout_constraintLeft_toRightOf="@id/activity_create_update_added_photo_one"
            app:layout_constraintTop_toBottomOf="@id/activity_create_update_added_photo_four" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/activity_create_update_add_photo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/activity_create_update_added_photo_one"
            app:layout_constraintBottom_toBottomOf="@id/activity_create_update_added_photo_one"
            app:layout_constraintLeft_toRightOf="@id/activity_create_update_added_photo_three"
            android:layout_marginStart="@dimen/default_large_margin"
            app:layout_constraintRight_toRightOf="@id/activity_create_update_property_full_description_text"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/ic_menu_add_white_24dp"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="mini"
            app:layout_anchor="@id/fragment_two_cconstraint_layout"
            app:layout_anchorGravity="bottom|right|end"
            />

        <Button
            android:id="@+id/create_update_confirm_button"
            style="@style/ButtonStyle"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_extra_large_margin"
            android:text="@string/create_update_confirm_button_create"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_create_update_added_photo_one" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>