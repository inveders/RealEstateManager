<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- FullScreen Dialog -->
    <style name="FullscreenDialogTheme" parent="Theme.AppCompat.DayNight.DialogWhenLarge">
       <!-- <item name="android:statusBarColor">@color/colorPrimary</item>-->
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
    </style>

    <!-- EditText Title-->
    <style name="TextviewStyle" parent="AppTheme" tools:targetApi="lollipop">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/darker_gray</item>

    </style>

    <!-- EditText text-->
    <style name="EditTextStyleText" parent="AppTheme" tools:targetApi="lollipop">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/edit_text_design</item>
        <item name="android:textColor">@android:color/black</item>

    </style>

    <!-- EditText text-->
    <style name="EditTextStylewithoutText" parent="AppTheme" tools:targetApi="lollipop">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>

    </style>

    <!-- Button style-->
    <style name="ButtonStyle" parent="AppTheme">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/border_button</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">150sp</item>
        <item name="android:padding">10sp</item>

    </style>

    <!-- Button add photo-->
    <style name="ButtonIntermediateStyle" parent="AppTheme">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/border_button_aubergine</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">100sp</item>
        <item name="android:padding">10sp</item>


    </style>

</resources>
